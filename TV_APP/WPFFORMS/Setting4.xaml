<Page x:Class="TV_APP.WPFFORMS.Setting4"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TV_APP.WPFFORMS"
      mc:Ignorable="d" 
      Title="Setting4" Height="440" Width="510"
      Background="AliceBlue">

    <Grid>
        <TextBox x:Name="nameTextbox" HorizontalAlignment="Center" Margin="0,23,0,0" TextWrapping="Wrap" Text="Введите название мероприятия" VerticalAlignment="Top" Width="370" Height="24"/>
        <Button x:Name="imageButton" Content="Выбрать изображение" HorizontalAlignment="Left" Margin="255,193,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.434,3.643" Width="185" Click="imageButton_Click" Height="27"/>
        <Image x:Name="imagePreview"  HorizontalAlignment="Left" Height="144" Margin="70,184,0,0" VerticalAlignment="Top" Width="154"/>
        <Button x:Name="createButton" Content="Создать запись" HorizontalAlignment="Left" Margin="255,299,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.434,3.643" Width="185" Click="imageButton2_Click" Height="26"/>
        <TextBox x:Name="descTextbox" HorizontalAlignment="Center" Margin="0,66,0,0" TextWrapping="Wrap" Text="Введите описание записи" VerticalAlignment="Top" Width="370" Height="100" />

    </Grid>
</Page>
