<Window x:Class="TV_APP.WPFFORMS.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TV_APP.WPFFORMS"
        mc:Ignorable="d"
        Title="Settings" Height="480" Width="510">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="14*"></RowDefinition>
        </Grid.RowDefinitions>

        <Frame x:Name="OptionFrame" Grid.Row="1" Background="LightGoldenrodYellow"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Content="Слайд #1" Width="170" Height="30" Click="Button_Click"/>
            <Button Content="Слайд #2" Width="170" Height="30" Click="Button_Click_1"/>
            <Button Content="Слайд #3" Width="170" Height="30" Click="Button_Click_2"/>
        </StackPanel>
    </Grid>
</Window>
