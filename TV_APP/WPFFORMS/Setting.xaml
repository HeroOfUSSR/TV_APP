<Page x:Class=        "TV_APP.WPFFORMS.Setting"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TV_APP.WPFFORMS"
        mc:Ignorable="d"
        Title="Setting" Height="450" Width="512"
        Background="AliceBlue">
    <Grid Margin="10,0,0,0" >
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="137*"/>
        </Grid.RowDefinitions>
        <ListBox x:Name="VideoList" Margin="10,25,25,248" Grid.RowSpan="2"  SelectionChanged="VideoList_SelectionChanged" >
           
        </ListBox>
        <Button Content="Добавить видео" HorizontalAlignment="Left" Margin="23,45,0,0" Grid.Row="1" VerticalAlignment="Top" Height="47" Width="93" Click="Button_Click" />
        <Button Content="Удалить видео" Click="Button_Click_1" HorizontalAlignment="Left" Margin="374,45,0,0" Grid.Row="1" VerticalAlignment="Top" Height="47" Width="93"/>



    </Grid>
</Page>
