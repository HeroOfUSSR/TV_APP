<Window x:Class="TV_APP.WPFFORMS.Setting3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TV_APP.WPFFORMS"
        mc:Ignorable="d"
        Title="Setting3" Height="450" Width="510">
    <Grid>
        <TextBox x:Name="nameEventTextbox" HorizontalAlignment="Center" Margin="0,23,0,0" TextWrapping="Wrap" Text="Введите название мероприятия" VerticalAlignment="Top" Width="370" Height="24"/>
        <DatePicker x:Name="dateEventPicker" HorizontalAlignment="Center" Margin="0,65,0,0" VerticalAlignment="Top" Width="370" Height="60"/>
        <Button x:Name="imageButton" Content="Выбрать изображение" HorizontalAlignment="Left" Margin="255,149,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.434,3.643" Width="185" Click="imageButton_Click"/>
        <Image x:Name="imagePreview"  HorizontalAlignment="Left" Height="144" Margin="70,140,0,0" VerticalAlignment="Top" Width="154"/>

    </Grid>
</Window>
